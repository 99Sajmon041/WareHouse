@model TechnicianChartViewModel

<div class="mb-4">
    <form method="get" asp-action="Technicians" class="d-flex flex-wrap justify-content-center align-items-end gap-2">
        <label for="period" class="form-label text-white">Období pro graf:</label>
        <select name="period" id="period" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
            <option value="week" selected="@(Model.SelectedPeriod == "week")">Týden</option>
            <option value="month" selected="@(Model.SelectedPeriod == "month")">Měsíc</option>
            <option value="quarter" selected="@(Model.SelectedPeriod == "quarter")">Kvartál</option>
            <option value="year" selected="@(Model.SelectedPeriod == "year")">Rok</option>
        </select>
    </form>
</div>

@if (Model.ChartData.Any())
{
    <div style="overflow-x: auto; max-width: 100%;">
        <canvas id="technicianChart" style="min-width: 600px; height: 400px;"></canvas>
    </div>
}
else
{
    <p class="text-center text-muted mt-4">
        <i class="bi bi-info-circle"></i>
        Zatím nejsou data pro zobrazení grafu.
    </p>
}
