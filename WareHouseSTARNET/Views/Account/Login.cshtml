@model LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<div class="row justify-content-center">
    <div class="col-md-6 d-flex flex-column align-items-center">
        <h2 class="text-danger my-4">Přihlášení</h2>

        <form asp-action="Login" method="post" class="w-100 text-center">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label><br />
                <input asp-for="Email" class="form-control form-control-sm mx-auto" style="width: 300px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label><br />
                <input asp-for="Password" type="password" class="form-control form-control-sm mx-auto" style="width: 300px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex justify-content-center align-items-center">
                <input asp-for="RememberMe" class="form-check-input me-2" />
                <label asp-for="RememberMe" class="form-check-label mb-0"></label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-sm btn-danger px-4 py-2">Přihlásit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
