@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Změna hesla";
}

<h2 class="text-center text-danger my-4">Změna hesla</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label fw-bold"></label>
                <input asp-for="CurrentPassword" class="form-control form-control-sm w-75" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-bold"></label>
                <input asp-for="NewPassword" class="form-control form-control-sm w-75" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label fw-bold"></label>
                <input asp-for="ConfirmNewPassword" class="form-control form-control-sm w-75" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Profile" class="btn btn-sm btn-outline-danger px-4 py-2">Zpět</a>
                <button type="submit" class="btn btn-sm btn-danger px-4 py-2">Změnit heslo</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
