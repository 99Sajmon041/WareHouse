@model List<MaterialAddToStockViewModel>

@{
    ViewData["Title"] = "Naskladnit materiál";
}

<h2 class="text-center text-danger my-4">Naskladnit materiál</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="AddToStock" method="post">
            @Html.AntiForgeryToken()

            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].MaterialName" />

                <div class="row mb-3">
                    <div class="col-9 d-flex align-items-center">
                        <label class="form-label fw-bold mb-0">@Model[i].MaterialName</label>
                    </div>
                    <div class="col-3">
                        <input asp-for="@Model[i].QuantityToAdd" class="form-control form-control-sm" />
                        <span asp-validation-for="@Model[i].QuantityToAdd" class="text-danger"></span>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-sm btn-danger px-4 py-2">Naskladnit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}