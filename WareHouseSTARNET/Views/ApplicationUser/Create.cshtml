@model ApplicationUserCreateViewModel

@{
    ViewData["Title"] = "Vytvoření uživatele";
}

<h2 class="text-center text-danger my-4">Vytvoření uživatele</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-bold"></label>
                <input asp-for="FirstName" class="form-control form-control-sm w-75" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-bold"></label>
                <input asp-for="LastName" class="form-control form-control-sm w-75" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control form-control-sm w-75" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                <input asp-for="PhoneNumber" class="form-control form-control-sm w-75" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label fw-bold"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm w-50" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-bold"></label>
                <select asp-for="Role" asp-items="Model.Roles" class="form-select form-select-sm w-50"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" class="form-control form-control-sm w-75" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-sm w-75" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-sm btn-outline-danger px-4 py-2">Zpět</a>
                <button type="submit" class="btn btn-sm btn-danger px-4 py-2">Vytvořit uživatele</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}